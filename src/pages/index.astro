---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from '@/components/home/Hero';
import Features from '@/components/home/Features';
import HowItWorks from '@/components/home/HowItWorks';
import MicroInteractions from '@/components/home/MicroInteractions';
import Pricing from '@/components/home/Pricing';
import Newsletter from '@/components/home/Newsletter';
import BlogPreview from '@/components/home/BlogPreview.astro';
import CTA from '@/components/home/CTA';
---

<BaseLayout
  title="Astrobot.design | Blazing Fast Websites Built with AI"
  description="AI-powered, human-designed websites that load up to 75% faster than traditional sites. Book your designer today."
>
  <!-- Hero Section (critical) -->
  <Hero client:load />

  <!-- Features Section (visible on load) -->
  <Features client:visible />

  <!-- How It Works Section -->
  <HowItWorks client:idle />

  <!-- Micro-Interactions Section -->
  <MicroInteractions client:idle />

  <!-- Pricing Section -->
  <Pricing client:idle />

  <!-- Newsletter Section -->
  <Newsletter client:idle />

  <!-- Blog Preview Section -->
  <BlogPreview />


  <!-- CTA Section -->
  <CTA client:idle />
</BaseLayout>
