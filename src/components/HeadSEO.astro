---
import "@/styles/global.css";
import "@/styles/fonts.css";
import { Image } from 'astro:assets';
import seoImage from '../assets/img_2806_nw_1d1484c0.jpeg';

interface Props {
  title?: string | undefined;
  description?: string | undefined;
  ogImage?: URL | undefined;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultOgImage = new URL(seoImage.src, Astro.site);

if (Astro.props.ogImage === undefined) {
  Astro.props.ogImage = defaultOgImage;
}

const { title, description, ogImage } = Astro.props;
---

<meta charset="utf-8" />
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- Font preconnect for better performance -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="dns-prefetch" href="https://plausible.io" />
<meta name="generator" content="new.website - https://new.website" />
<meta name="keywords" content="fast websites, astro framework, web design, AI technology, web development, static websites, SEO optimized" />
<meta name="author" content="Astrobot.design" />
<link rel="canonical" href={canonicalURL} />
<link
  rel="icon"
  type="image/svg+xml"
  href={`${Astro.site}favicon.svg?v=3`}
/>
<link
  rel="icon" 
  type="image/png"
  sizes="32x32"
  href={`${Astro.site}favicon-32x32.png?v=3`}
/>
<link
  rel="icon" 
  type="image/png"
  sizes="16x16"
  href={`${Astro.site}favicon-16x16.png?v=3`}
/>
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href={`${Astro.site}favicon-32x32.png?v=3`}
/>
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />

<!-- DO NOT REMOVE - Plausible Analytics must always be enabled -->
<script is:inline>
  // Plausible Analytics - Dynamic Domain Detection
  // This script automatically detects the current domain and loads Plausible analytics
  (function() {
    const hostname = window.location.hostname;
    
    // Only track production domains (exclude localhost, IP addresses, etc.)
    if (hostname !== 'localhost' && !hostname.match(/^\d+\.\d+\.\d+\.\d+$/)) {
      const script = document.createElement('script');
      script.defer = true;
      script.setAttribute('data-domain', hostname);
      script.src = 'https://plausible.io/js/script.js';
      document.head.appendChild(script);
    }
  })();
</script>
